<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.applefish.gheraspoint.activty.SettingActivity"
    tools:showIn="@layout/activity_setting">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTIFCATIONS"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:textColor="#C0C0C0"
        android:layout_alignParentLeft="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0"
        android:layout_toRightOf="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/view" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push notifications"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/textView2"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"/>

    <android.support.v7.widget.SwitchCompat
        android:text="Receive notifccations about offers and information from Smart Shop UAE App"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:id="@+id/switch1"
        android:textColor="#7A7A7A"
        android:padding="10dp"
        android:layout_below="@+id/textView1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

    </android.support.v7.widget.SwitchCompat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications sound"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView3"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:layout_below="@+id/switch1"
        android:layout_alignParentLeft="true"/>

    <android.support.v7.widget.SwitchCompat
        android:text="Turn on/off notifcation sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:textColor="#7A7A7A"
        android:padding="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.SwitchCompat>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications vibrate"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView4"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:layout_below="@+id/switch2"
        android:layout_alignParentLeft="true"/>

    <android.support.v7.widget.SwitchCompat
        android:text="Turn on/off notifcation Vibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch3"
        android:textColor="#7A7A7A"
        android:padding="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.SwitchCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0"
        android:id="@+id/view2"
        android:layout_below="@+id/switch1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0"
        android:id="@+id/view3"
        android:layout_below="@+id/switch2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
